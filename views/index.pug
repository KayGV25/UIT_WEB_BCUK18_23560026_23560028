doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="public/stylesheets/style.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined")
    script(src="routes/script.js")
    script(src="index.js")
    script(src="routes/genre.js")
    script(src="routes/login.js")
    title Web app
  body
    // To top
    a(href="#nav")
      span.material-symbols-outlined(style="position: fixed; bottom: 0; right: 0; margin: 1.5vw; font-size: 30pt;") expand_less
    // Side menu
    div.dark-bg.hide(id="dark-bg")
    div.side-menu.hide(id="side-menu")
      p.close(onclick="sidebar()") Close menu
      div.side-menu-content
        p
          a(href="index", style="text-decoration: none;") Home
        p
          | Genre
          span.material-icons(style="float: right;", onclick="ShowContent('drop-sb')") add
        div#drop-sb.drop
          div.sub-content#genre
      div.logout(onclick="loginsignout()")
        span.material-icons logout
        p#Li_SoVal Sign Out
    // Nav bar
    nav#nav
      div.nav-cont
        div.left
          span.material-icons(style="font-size: 2.5vw; cursor: pointer;", onclick="sidebar()") menu
          p.Logo MOVIESBAY
        div.search
          span.material-icons search
          input(type="text", placeholder="Enter Movie name...", id="search-content", class="input")
        div.right
          a.Upgrd-plan(href="upgrade-plan") Upgrade plan
          div.ava
    // Main section
    section.main
      // Watch later
      div.show-movies-container
        div.show-movies-head
          h1 Watch later
          div.horizontal-line
          span.material-symbols-outlined(style="margin: auto; font-weight: bold; font-size: 5vh; cursor: pointer;", onclick="ShowContent('drop-wl')") expand_more
        div#drop-wl.drop-ft
          div.show-movies#watch-later
            // replace this with BE with the same class and structure
            each _ in [1, 2, 3, 4, 5, 6]
              div.film
                a(href="#")
                  div.thumbnail
                  div.film-des-show
                    p.title Movie name
                    div.other 2023-180m
